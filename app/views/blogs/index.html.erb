<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id)%></td>
    
    <% if blog.user_id == current_user.id %>
    <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id)%></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete %></td>
    <% end %>
    
  </tr>
<% end %>
</table>

<%= link_to 'ブログ作成画面にもどる', new_blog_path %>